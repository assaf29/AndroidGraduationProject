        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/offerSenderName"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginStart="271dp"
        android:layout_marginLeft="271dp"
        android:layout_marginTop="30dp"
        android:paddingTop="20dp"
        android:text="sender "
        android:textColor="#23283a"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginStart="271dp"
        android:layout_marginLeft="268dp"
        android:layout_marginTop="0dp"
        android:paddingTop="12dp"
        android:text="مقدم الطلب: "
        android:textColor="@color/common_google_signin_btn_text_dark_disabled"
        android:textSize="17dp" />



    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="192dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="40dp"
        android:paddingBottom="10dp"
        android:background="@color/darkblue" />

    <TextView
        android:id="@+id/postTitle"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:paddingTop="20dp"
        android:text="title"
        android:textColor="#23283a"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="12dp"
        android:text="عنوان المشور:  "
        android:textColor="@color/common_google_signin_btn_text_dark_disabled"
